{
	"tasks": {
		"start:local": "deno run --allow-read --allow-write --allow-net --allow-env --env-file=.env.local ./src/main.ts",
		"start:prod": "deno run --allow-read --allow-write --allow-net --allow-env --v8-flags=--expose-gc --env-file=.env.production ./src/main.ts"
	},
	"imports": {
		"@/": "./src/",
		"@std/assert": "jsr:@std/assert@1",
		"axios": "npm:axios@^1.7.9"
	},
	"nodeModulesDir": "auto",
	"fmt": {
		"exclude": ["README"]
	}
}
